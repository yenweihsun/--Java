

String driverClass = "org.apache.derby.jdbc.ClientDriver";
String url = "jdbc:derby://localhost:1527/MyDB";
String username = "app";
String password = "app";
Scanner sc = new Scanner(System.in);
system.out.println("請輸入查詢字串?")
String str = sc.next();
String sql = "SELECT product_id, purchase_cost, quantity_on_hand, description FROM APP.PRODUCT where description like '%" + str + "%'" ;
try(
//定義好
    Connection conn = DriverManager.getConnection();
    Statement stmt = conn.createStatement();
    Result rs = stmt.executeQuery(sql);
  
){
//開始印標題和內容
    ResultSetMetaData md = rs.getMetaData();
    for(int i = 1 ; i<=md.getColumnCount(); i++){
      system.out.println(md.getColumnName(i));
    }
    while(rs.next()){
    int product_id = rs.getInt("product_id");
    double purchase_cost = rs.getDouble("purchase_cost");
    int quantity_on_hand = rs.getInt("quantity_on_hand");
    String description = rs.getString("description");
    System.out.printf("%d\t %.2f\t %d\t %s\n ", product_id,purchase_cost,quantity_on_hand,description);                
}
catch(Exception e ){
    System.out.println("錯誤"+e);
}







